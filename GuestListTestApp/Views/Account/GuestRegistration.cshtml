@using GuestListTestApp.Models
@model GuestViewModel
@{
    ViewBag.Title = Resources.Resources.Registration;
}
<br/>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                @Resources.Resources.Registration
            </div>
            <div class="panel-body">
                <span style="white-space: pre-line">@Resources.Resources.RegistrationInfoMessage</span>
                <section id="loginForm">
                    @using (Html.BeginForm("GuestRegistration", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <hr/>
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            @Html.LabelFor(m => m.FIO, new {@class = ""})
                            @Html.TextBoxFor(m => m.FIO, new {@class = "form-control", @style = "min-width: 100%"})
                            @Html.ValidationMessageFor(m => m.FIO, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new {@class = ""})
                            @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @style = "min-width: 100%" })
                            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, new {@class = ""})
                            @Html.TextBoxFor(m => m.Phone, new {@class = "form-control", @style = "min-width: 100%" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new {@class = "text-danger"})
                        </div>
                        <div class="form-group">
                            <div>
                                @Html.CheckBoxFor(m => m.IsAggree, new {})
                                @Resources.Resources.AgreeWithMessage <a href="">@Resources.Resources.TermsMessage</a>
                                @Html.ValidationMessageFor(m => m.IsAggree, "", new { @class = "text-danger" })
                            </div>
                            <br/>
                            <div >
                                <input type="submit" value="@Resources.Resources.Submit" class="btn btn-primary"/>
                            </div>
                        </div>
                        }
                </section>
            </div>
            <div class="col-md-4">
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
